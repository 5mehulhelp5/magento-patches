{
    "name": "creativestyle/magento-patches",
    "description": "patches for magento core",
    "require": {
        "cweagans/composer-patches": "~1.0"
    },
    "extra": {
        "patches": {
            "magento/framework": {
                "Fix customer grid EAV indexing":
                "vendor/creativestyle/magento-patches/essential/customer-grid-indexing-fix.patch",
                "Fix image upload error when target directory is symlinked":
                "vendor/creativestyle/magento-patches/essential/image-upload-to-symlinked-dir-fix.patch",
                "Allow CSS classes with BOM":
                "vendor/creativestyle/magento-patches/essential/allow-css-classes-with-bom.patch",
                "Fix file permissions":
                "vendor/creativestyle/magento-patches/essential/fix-file-permissions.patch"
            },
            "amasty/module-advanced-permissions": {
                "Fix module loading order":
                "vendor/creativestyle/magento-patches/essential/amasty-advanced-permission-load-order.patch"
            },
            "amasty/base": {
                "Fix module sequence":
                "vendor/creativestyle/magento-patches/essential/amasty-base-sequence-fix.patch"
            },
            "magento/magento2-base": {
                "Make it possible to close fullscreen product gallery on iOS":
                "vendor/creativestyle/magento-patches/essential/ios-fullscreen-gallery-close-fix.patch"
            },
            "magento/module-search": {
                "Fix focus being lost after in search input after JS init":
                "vendor/creativestyle/magento-patches/essential/mini-search-focus-fix.patch"
            },
            "magento/module-config": {
                "Fix module loading order":
                "vendor/creativestyle/magento-patches/essential/magento-config-load-order.patch"
            },
            "smile/elasticsuite": {
                "Fix isInline method that cause filters in layered navigation to not expand":
                "vendor/creativestyle/magento-patches/essential/fix-is-inline-elasticsuite-2-5.patch"
            },
            "smile/module-elasticsuite-cms-search": {
                "Fix setOrder method that contains not imported class name":
                "vendor/creativestyle/magento-patches/essential/cms-search-set-order.patch"
            },
            "magento/module-catalog-inventory": {
                "Fix stock indexer to correctly reindex stock using materialized views":
                "vendor/creativestyle/magento-patches/essential/fix-stock-mview-indexing.patch"
            },
            "magento/module-catalog": {
                "Fixes sorting related products in admin panel.":
                "vendor/creativestyle/magento-patches/essential/related-products-sorting.patch",
                "Fix tier price saving issue (M2C-2550)":
                "vendor/creativestyle/magento-patches/essential/fix-tier-price-saving-issue.patch"
            },
            "magento/module-checkout": {
                "Fixes undefined string being displayed when shipping method has no title.":
                "vendor/creativestyle/magento-patches/essential/shipping-method-undefined-title.patch"
            },
            "magento/module-catalog-url-rewrite": {
                "Fixes store switcher":
                "vendor/creativestyle/magento-patches/essential/fix-language-switcher.patch"
            },
            "magento/module-catalog-import-export": {
                "Fixes missing url_key after product import":
                "vendor/creativestyle/magento-patches/essential/fix-missing-url-key-after-import.patch"
            },
            "magento/module-review": {
                "Fix ajax endpoint for review by a redirect to 404 instead of a thrown exception":
                "vendor/creativestyle/magento-patches/essential/fix-review-ajax-for-disable-products.patch",
                "Fix category no such entity with id":
                "vendor/creativestyle/magento-patches/essential/magento-reviews-category-no-such-entity.patch"
            },
            "aheadworks/module-faq": {
                "Fixes bug FAQ Article with id \"\" does not exist Exception":
                "vendor/creativestyle/magento-patches/essential/aheadworks-module-faq-fix-empty-article-id.patch"
            },
            "aheadworks/module-product-question": {
                "Fix incorrect definition for class IntlDateFormatter":
                "vendor/creativestyle/magento-patches/essential/aheadworks-fix-incorrect-definition.patch"
            },
            "repertus/packstation": {
                "Fix extension to make it work with creativeshop":
                "vendor/creativestyle/magento-patches/essential/repertus-packstation-fixes.patch",
                "Add support for situation when there is only one street field configured":
                "vendor/creativestyle/magento-patches/essential/repertus-packstation-single-street-field.patch",
                "Makes mailing address a preselected type in checkout and fixes one typo":
                "vendor/creativestyle/magento-patches/essential/repertus-packstation-mailing-as-default.patch",
                "Automatically selects different billing address for packstation or post office shipping":
                "vendor/creativestyle/magento-patches/essential/repertus-packstation-billing-address.patch"
            },
            "magento/module-quote": {
                "Don't try removing items from quote if it's empty":
                "vendor/creativestyle/magento-patches/essential/dont-remove-empty-quote-items.patch"
            },
            "magento/module-import-export": {
                "Fix skip invalid rows functionality in import": "vendor/creativestyle/magento-patches/essential/fix-skip-import-validation-strategy.patch"
            }
        }
    }
}
