{
    "name": "creativestyle/magento-patches",
    "description": "MageSuite Patchset For Magento Core",
    "homepage": "https://creativestyle.de",
    "license": "OSL-3.0",
    "type": "patchset",
    "require": {
        "creativestyle/composer-plugin-patchset": "^1.0"
    },
    "extra": {
        "patchset": {
            "magento/framework": [
                {
                    "description": "Fix customer grid EAV indexing",
                    "filename": "essential/m21-customer-grid-indexing-fix.patch",
                    "version-constraint": "100.1.*"
                },
                {
                    "description": "Fix file permissions",
                    "filename": "essential/m21-fix-file-permissions.patch",
                    "version-constraint": "100.1.*"
                },
                {
                    "description": "Fix customer grid EAV indexing (Magento 2.2.0-2.2.3)",
                    "filename": "essential/m22-customer-grid-indexing-fix.patch",
                    "version-constraint": "~101.0.0,<=101.0.3"
                },
                {
                    "description": "Fix image upload error when target directory is symlinked",
                    "filename": "essential/m22-image-upload-to-symlinked-dir-fix.patch",
                    "version-constraint": "101.0.3 || 101.0.4"
                },
                {
                    "description": "Allow CSS classes with BOM",
                    "filename": "essential/m22-allow-css-classes-with-bom.patch",
                    "version-constraint": "101.0.*"
                },
                {
                    "description": "Fix file permissions (Magento 2.2.0-2.2.5)",
                    "filename": "essential/m226minus-fix-file-permissions.patch",
                    "version-constraint": "~101.0.0,<101.0.6"
                },
                {
                    "description": "Fix file permissions (Magento 2.2.6+)",
                    "filename": "essential/m226plus-fix-file-permissions.patch",
                    "version-constraint": ">=101.0.6"
                }

            ],
            "amasty/module-advanced-permissions": [
                {
                    "description": "Fix module loading order",
                    "filename": "essential/m22-amasty-advanced-permission-load-order.patch",
                    "version-constraint": "*"
                }
            ],
            "amasty/base": [
                {
                    "description": "Fix module sequence",
                    "filename": "essential/m22-amasty-base-sequence-fix.patch",
                    "version-constraint": ">=1.4.0,<1.4.6"
                }
            ],
            "magento/magento2-base": [
                {
                    "description": "Make it possible to close fullscreen product gallery on iOS",
                    "filename": "essential/m22-ios-fullscreen-gallery-close-fix.patch",
                    "version-constraint": "~2.2.0,<=2.2.3"
                }
            ],
            "magento/module-search": [
                {
                    "description": "Fix focus being lost after in search input after JS init (Magento 2.2.0-2.2.4)",
                    "filename": "essential/m22-mini-search-focus-fix.patch",
                    "version-constraint": "~100.2.0,<=100.2.3"
                }
            ],
            "magento/module-config": [
                {
                    "description": "Fix module loading order (Magento 2.2.0-2.2.4)",
                    "filename": "essential/m22-magento-config-load-order.patch",
                    "version-constraint": "~101.0.0,<=101.0.4"
                }
            ],
            "smile/elasticsuite": [
                {
                    "description": "Fix isInline method that cause filters in layered navigation to not expand",
                    "filename": "essential/m22-fix-is-inline-elasticsuite-2-5.patch",
                    "version-constraint": "*"
                }
            ],
            "smile/module-elasticsuite-cms-search": [
                {
                    "description": "Fix setOrder method that contains not imported class name",
                    "filename": "essential/m22-cms-search-set-order.patch",
                    "version-constraint": "*"
                }
            ],
            "magento/module-catalog-inventory": [
                {
                    "description": "Fix stock indexer to correctly reindex stock using materialized views (Magento 2.2.0-2.2.4)",
                    "filename": "essential/m22-fix-stock-mview-indexing.patch",
                    "version-constraint": "~100.2.0,<=100.2.3"
                }
            ],
            "magento/module-catalog": [
                {
                    "description": "Fixes sorting related products in admin panel.",
                    "filename": "essential/m22-related-products-sorting.patch",
                    "version-constraint": "102.0.*"
                },
                {
                    "description": "Fix tier price saving issue (M2C-2550)",
                    "filename": "essential/m22-fix-tier-price-saving-issue.patch",
                    "version-constraint": "^102.0.6"
                },
                {
                    "description": "Prevent from changing attribute type from int when saving in admin (Magento 2.2.4+)",
                    "filename": "essential/m224plus-saving-int-attribute-type.patch",
                    "version-constraint": ">=102.0.4"
                },
                {
                    "description": "Prevent from changing attribute type from int when saving in admin (2.2.0-2.2.4)",
                    "filename": "essential/m224minus-saving-int-attribute-type.patch",
                    "version-constraint": "~102.0.0,<=102.0.3"
                }
            ],
            "magento/module-checkout": [
                {
                    "description": "Fixes undefined string being displayed when shipping method has no title.",
                    "filename": "essential/m22-shipping-method-undefined-title.patch",
                    "version-constraint": "102.0.*"
                }
            ],
            "magento/module-catalog-url-rewrite": [
                {
                    "description": "Fixes store switcher (only magento 2.2.5)",
                    "filename": "essential/m22-fix-language-switcher.patch",
                    "version-constraint": "100.2.4"
                }
            ],
            "magento/module-catalog-import-export": [
                {
                    "description": "Fixes missing url_key after product import",
                    "filename": "essential/m22-fix-missing-url-key-after-import.patch",
                    "version-constraint": "100.2.*"
                }
            ],
            "magento/module-review": [
                {
                    "description": "Fix ajax endpoint for review by a redirect to 404 instead of a thrown exception",
                    "filename": "essential/m22-fix-review-ajax-for-disable-products.patch",
                    "version-constraint": "~100.2.0,<=100.2.6"
                },
                {
                    "description": "Fix category no such entity with id",
                    "filename": "essential/m22-magento-reviews-category-no-such-entity.patch",
                    "version-constraint": "100.2.*"
                }
            ],
            "aheadworks/module-faq": [
                {
                    "description": "Fixes bug FAQ Article with id \"\" does not exist Exception",
                    "filename": "essential/m22-aheadworks-module-faq-fix-empty-article-id.patch",
                    "version-constraint": "*"
                }
            ],
            "aheadworks/module-product-question": [
                {
                    "description": "Fix incorrect definition for class IntlDateFormatter",
                    "filename": "essential/m22-aheadworks-fix-incorrect-definition.patch",
                    "version-constraint": "*"
                }
            ],
            "repertus/packstation": [
                {
                    "description": "Fix extension to make it work with creativeshop",
                    "filename": "essential/m22-repertus-packstation-fixes.patch",
                    "version-constraint": "*"
                }
            ],
            "magento/module-quote": [
                {
                    "description": "Don't try removing items from quote if it's empty (magento 2.2.2-2.2.4)",
                    "filename": "essential/m22-dont-remove-empty-quote-items.patch",
                    "version-constraint": "~101.0.2,<=101.0.4"
                }
            ],
            "magento/module-import-export": [
                {
                    "description": "Fix skip invalid rows functionality in import",
                    "filename": "essential/m22-fix-skip-import-validation-strategy.patch",
                    "version-constraint": "100.2.*"
                }
            ],
            "plugincompany/contactforms": [
                {
                    "description": "Show 404 page instead of throwing error when form is not found",
                    "filename": "optional/m22-empty-form-404.patch",
                    "version-constraint": "*"
                }
            ]
        }
    }
}
