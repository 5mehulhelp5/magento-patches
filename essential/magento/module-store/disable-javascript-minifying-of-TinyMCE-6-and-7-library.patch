index d2f8f82..4731608 100644
--- a/etc/config.xml
+++ b/etc/config.xml
@@ -22,12 +22,16 @@
                 <minify_files>0</minify_files>
                 <minify_exclude>
                     <tiny_mce>/tiny_mce/</tiny_mce>
+                    <tiny_mce_6>/tiny_mce_6/</tiny_mce_6>
+                    <tiny_mce_7>/tiny_mce_7/</tiny_mce_7>
                 </minify_exclude>
